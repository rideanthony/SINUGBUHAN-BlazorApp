@page "/fizzbuzz"

<h3 style="text-align: center;">FizzBuzz</h3>

<div style="width: 50%; margin: auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
    <h3>Enter an Integer</h3>
    <input type="number" id="userInput" @bind="UserInput" style="width: 100%; height: 30px; font-size: 18px; padding: 10px; border: 1px solid #ccc;" />
    <p style="font-size: 18px;">You entered: @UserInput</p>

    @if (UserInput.HasValue)
    {
        var result = GetFizzBuzzResult(UserInput.Value);
        <p style="font-size: 24px;">@result</p>
    }
</div>

@code {
    public int? UserInput { get; set; }

    private string GetFizzBuzzResult(int number)
    {
        if (number == 0)
        {
            return number.ToString();
        }
        else if (number % 3 == 0 && number % 5 == 0 && number % 2 == 0)
        {
            return "FizzBuzzDozz";
        }
        else if (number % 3 == 0 && number % 5 == 0)
        {
            return "FizzBuzz";
        }
        else if (number % 3 == 0)
        {
            return "Fizz";
        }
        else if (number % 5 == 0)
        {
            return "Buzz";
        }
        else if (number % 2 == 0)
        {
            return "Dozz";
        }
        else
        {
            return number.ToString();
        }
    }
}