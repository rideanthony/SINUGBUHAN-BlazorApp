@page "/swapping"
@page "/swapnumbers"



<style>
    .swap {
        text-align: center;
        margin-top: 20px;
    }

        .swap button {
            margin: 10px;
            padding: 10px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .swap button:hover {
                background-color: #2c3395;
            }

        .swap input[type="number"] {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #242424;
            border-radius: 5px;
            padding-left: 14px;
        }

    h3 {
        font-family: 'Courier New', Courier, monospace;
        font-weight: 1000;
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
</style>



<div class="swap">
    <h3>Swap Numbers</h3>

    <input @bind="num1" type="number" />
    <button @onclick="Swap12">
        <i class="bi bi-arrow-left-right"></i>
    </button>
    <input @bind="num2" type="number" />



    <button @onclick="ResetNumbers">
        <i class="bi bi-arrow-counterclockwise"></i>
    </button>


</div>
@code {
    private int num1;
    private int num2;

    private void Swap12()
    {
        (num1, num2) = (num2, num1);
    }



    private void ResetNumbers()
    {
        num1 = 0;
        num2 = 0;


    }
}